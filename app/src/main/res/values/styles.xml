<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="ForecastTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Main.Logo</item>
        <item name="actionBarStyle">@style/ActionBar.Main.Logo</item>
    </style>

    <style name="ActionBar.Main.Logo" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <!-- textview for listitems in forecastFragment -->
    <style name="list_item_textview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- Static size for textview (phone) -->
    <style name="list_item_textview_scale" parent="list_item_textview">
        <item name="android:width">200dp</item>
    </style>
</resources>
